<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lightway.GMapsActivity">

    <fragment
        android:id="@+id/gMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btnUserDestination"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".GMapsActivity" />

    <Button
        android:id="@+id/air_stations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:onClick="airStationsAPIActivity"
        android:text="@string/air_stations"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/parking"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toEndOf="@+id/btnUserDestination" />

    <Button
        android:id="@+id/btnUserDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eget val"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/parking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="parkingAPIActivity"
        android:text="@string/parking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/profileBtn"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:onClick="showUserPopup"
        android:scaleType="centerCrop"
        android:src="@drawable/com_facebook_profile_picture_blank_square"
        tools:layout_editor_absoluteX="322dp"
        tools:layout_editor_absoluteY="0dp" />


</android.support.constraint.ConstraintLayout>
